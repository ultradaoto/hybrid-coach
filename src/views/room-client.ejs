<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= roomId.substring(0, 8) %>...</title>
    
    <%- include('partials/room-base-styles') %>
    
    <style>
        /* Override base styles for proper 3:4 layout */
        .video-grid {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1.5rem;
            padding: 2rem;
            background: #111;
            overflow-y: auto;
            flex-wrap: nowrap; /* Keep boxes in a row */
        }
        
        /* Client-specific styles - simplified layout */
        .video-panel {
            flex: 1; /* Take full width - no side panel */
        }

        .client-info {
            background: #2a2a2a;
            padding: 0.3rem 0.5rem;
            border-bottom: 1px solid #404040;
        }

        .client-info h3 {
            color: #17a2b8;
            margin: 0;
            font-size: 0.9rem;
            display: inline-block;
        }

        .client-info p {
            margin: 0;
            font-size: 0.75rem;
            opacity: 0.8;
            display: inline-block;
            margin-left: 0.5rem;
        }

        .session-status {
            background: #1e1e1e;
            padding: 0.2rem 0.4rem;
            border-radius: 4px;
            margin-top: 0.2rem;
            font-size: 0.7rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .connection-quality {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .quality-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #28a745;
        }

        .quality-indicator.poor {
            background: #dc3545;
        }

        .quality-indicator.fair {
            background: #ffc107;
        }

        /* End Call Button */
        .end-call-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0.5rem 1rem;
            background: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            border: 2px solid #dc3545;
        }

        .end-call-btn:hover {
            background: #c82333;
            border-color: #bd2130;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }

        .end-call-main {
            font-size: 1rem;
            font-weight: bold;
        }

        .end-call-sub {
            font-size: 0.75rem;
            opacity: 0.9;
            margin-top: 0.2rem;
        }

        /* Different sizes for each video box */
        .video-wrapper {
            position: relative;
            margin: 0 10px;
            background: #222;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.5);
            transition: all 0.3s ease;
            border: 3px solid transparent;
        }
        
        /* Client and AI boxes - LARGER */
        .video-wrapper:nth-child(1),  /* Client */
        .video-wrapper:nth-child(2) { /* AI */
            width: 450px !important;
            height: 600px !important;  /* Maintaining 3:4 ratio */
        }
        
        /* Coach box - SMALLER (55% width) */
        .video-wrapper:nth-child(3) { /* Coach */
            width: 220px !important;   /* 55% of 400px */
            height: 293px !important;  /* Maintaining 3:4 ratio */
        }
        
        .video-wrapper video {
            width: 100% !important;
            height: 100% !important;
            object-fit: cover; /* This will crop the video to fit */
            border-radius: 8px;
            display: block;
        }

        /* AI Agent Container - NO PADDING */
        .ai-agent-container {
            width: 100%;
            height: 100%;
            background: #1a1a1a;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 !important;  /* Remove all padding */
            margin: 0 !important;   /* Remove all margin */
            position: relative;
            overflow: hidden;
        }

        .ai-agent-container elevenlabs-convai {
            width: 100% !important;
            height: 100% !important;
            border-radius: 6px;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: 0 !important;  /* No margins */
            padding: 0 !important; /* No padding */
        }

        /* Coming Soon Placeholder - 3:4 ratio */
        .coming-soon-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px dashed #718096;
            opacity: 0.7;
        }

        .coming-soon-content {
            text-align: center;
            color: #e2e8f0;
            padding: 2rem;
        }

        .coming-soon-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.8;
        }

        .coming-soon-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #f7fafc;
        }

        .coming-soon-subtitle {
            font-size: 1rem;
            color: #ffd700;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .coming-soon-description {
            font-size: 0.8rem;
            opacity: 0.7;
            line-height: 1.4;
            max-width: 200px;
        }

        /* Mobile adjustments */
        @media (max-width: 768px) {
            .video-grid {
                flex-direction: column;
                gap: 1rem;
            }
            
            /* All boxes same size on mobile */
            .video-wrapper,
            .video-wrapper:nth-child(1),
            .video-wrapper:nth-child(2),
            .video-wrapper:nth-child(3) {
                width: 300px !important;  /* Same size for all on mobile */
                height: 400px !important;  /* Maintaining 3:4 ratio */
            }
            
            .video-wrapper video {
                width: 100% !important;
                height: 100% !important;
            }
            
            .ai-agent-container,
            .coming-soon-placeholder {
                width: 100%;
                height: 100%;
            }

            .coming-soon-content {
                padding: 1rem;
            }

            .coming-soon-icon {
                font-size: 2.5rem;
            }

            .coming-soon-title {
                font-size: 1rem;
            }

            .coming-soon-subtitle {
                font-size: 0.9rem;
            }

            .coming-soon-description {
                font-size: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="video-panel">
            <div class="video-header">
                <div class="room-info">
                    <h2 style="margin: 0; font-size: 1.1rem; display: inline-block;">Your Coaching Session</h2>
                    <span class="subtitle" style="margin-left: 1rem; font-size: 0.8rem;">Session: <%= sessionId.substring(0, 8) %>...</span>
                </div>
                <div style="display: flex; align-items: center; gap: 2rem;">
                    <div class="ai-status">
                        <div class="ai-indicator" id="aiIndicator"></div>
                        <span id="aiStatusText">AI Coach Ready</span>
                    </div>
                    <a href="/dashboard" class="end-call-btn">
                        <span class="end-call-main">üîö End Call</span>
                        <span class="end-call-sub">Return to Dashboard</span>
                    </a>
                </div>
            </div>

            <div class="client-info">
                <h3>Welcome to your coaching session!</h3>
                <p id="sessionDescription">Your coach and AI assistant are here to help you achieve your goals.</p>
                
                <div class="session-status">
                    <div class="connection-quality">
                        <span>Connection:</span>
                        <div class="quality-indicator" id="connectionQuality"></div>
                        <span id="connectionStatus">Connecting...</span>
                    </div>
                    
                    <div id="aiSessionStatus" style="font-size: 0.7rem;">
                        <% if (!orbStatus) { %>
                            <span style="background: #fff3cd; color: #856404; padding: 0.2rem 0.4rem; border-radius: 3px; white-space: nowrap;">
                                ‚è≥ Waiting for coach...
                            </span>
                        <% } else { %>
                            <span style="background: #d4edda; color: #155724; padding: 0.2rem 0.4rem; border-radius: 3px; white-space: nowrap;">
                                ‚úÖ AI session active
                            </span>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="video-grid" id="videoGrid">
                <!-- Local video (Client) - LEFT -->
                <div class="video-wrapper">
                    <video id="localVideo" autoplay playsinline muted></video>
                    <div class="video-label">You</div>
                </div>

                <!-- AI Voice Agent - MIDDLE -->
                <div class="video-wrapper">
                    <div class="ai-agent-container" id="aiAgentContainer">
                        <elevenlabs-convai 
                            agent-id="<%= elevenlabsAgentId || 'agent_01jy88zv6zfe1a9v9zdxt69abd' %>"
                            dynamic-variables='{"user_name": "<%= user.skoolId || "dev-user-123" %>", "session_id": "<%= sessionId %>", "room_id": "<%= roomId %>"}'
                        ></elevenlabs-convai>
                    </div>
                    <div class="video-label">ü§ñ Ultra Coach AI</div>
                </div>

                <!-- Human Coach - RIGHT (Coming Soon) -->
                <div class="video-wrapper">
                    <div class="coming-soon-placeholder" id="coachPlaceholder">
                        <div class="coming-soon-content">
                            <div class="coming-soon-icon">üë®‚Äçüè´</div>
                            <div class="coming-soon-title">Human Coach</div>
                            <div class="coming-soon-subtitle">Feature Coming Soon</div>
                            <div class="coming-soon-description">3-way sessions with professional coaches will be available in the future</div>
                        </div>
                    </div>
                    <div class="video-label">üë®‚Äçüè´ Human Coach</div>
                </div>
            </div>

            <div class="controls-panel">
                <button id="toggleVideo" class="btn">üìπ Video</button>
                <button id="toggleAudio" class="btn">üé§ Audio</button>
                <button id="raiseHand" class="btn" style="background: #ffc107;">‚úã Raise Hand</button>
                <a href="/dashboard" class="btn" style="background: #6c757d;">üè† Exit</a>
            </div>
        </div>
    </div>

    <!-- Status notifications -->
    <div id="status" class="status" style="display: none;"></div>

    <!-- Include ElevenLabs ConvAI Widget -->
    <script src="https://unpkg.com/@elevenlabs/convai-widget-embed" async type="text/javascript"></script>
    
    <!-- Include Socket.IO client -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- Include TriPartyWebRTC -->
    <script type="module" src="/js/tri-party-webrtc.js"></script>
    
    <script type="module">
        import { TriPartyWebRTC } from '/js/tri-party-webrtc.js';

        // Client configuration
        const config = {
            roomId: '<%= roomId %>',
            userId: '<%= user.id %>',
            userName: '<%= user.displayName || user.email %>',
            userRole: 'client',
            participantType: 'human',
            onLocalStream: (stream) => {
                document.getElementById('localVideo').srcObject = stream;
                updateConnectionStatus('Connected', 'good');
            },
            onRemoteStream: (userId, stream, peerInfo) => {
                // For now, we're using ElevenLabs widget instead of video streams for AI
                // Future: This will handle human coach video streams
                console.log('Remote stream received from:', peerInfo.userName, peerInfo.userRole);
                if (peerInfo.userRole === 'coach' && peerInfo.participantType !== 'ai') {
                    // This would be for a future human coach video stream
                    console.log('Human coach stream would go here (feature coming soon)');
                }
            },
            onUserJoined: (userInfo) => {
                updateStatus(`${userInfo.userName} joined the session`, 'success');
                if (userInfo.userRole === 'coach') {
                    updateConnectionStatus('Coach connected', 'good');
                    updateSessionDescription('Your human coach has joined the session!');
                }
                // Note: AI agent is handled by ElevenLabs widget, not WebRTC
            },
            onUserLeft: (userId) => {
                updateStatus('Participant left the session', 'info');
            },
            onConnectionState: (state) => {
                if (state === 'connected') {
                    updateConnectionStatus('Connected', 'good');
                } else if (state === 'disconnected') {
                    updateConnectionStatus('Disconnected', 'poor');
                }
            },
            onError: (type, error) => {
                updateStatus(`Connection issue: ${error.message}`, 'error');
                updateConnectionStatus('Connection issues', 'poor');
            },
            onAIStatus: (data) => {
                updateAIStatus(data.status);
            },
            onSpeakingChange: (streamId, isSpeaking, participantInfo) => {
                updateSpeakingIndicator(streamId, isSpeaking, participantInfo);
            }
        };

        // Initialize WebRTC - DISABLED for now since we're using ElevenLabs widget
        // TODO: Re-enable when we add human coach video support
        // const webrtc = new TriPartyWebRTC(config);
        // webrtc.initialize();

        // UI Functions
        function updateStatus(message, type = 'info') {
            const statusEl = document.getElementById('status');
            statusEl.textContent = message;
            statusEl.className = `status ${type}`;
            statusEl.style.display = 'block';
            
            setTimeout(() => {
                statusEl.style.display = 'none';
            }, 5000);
        }

        function updateAIStatus(status) {
            const indicator = document.getElementById('aiIndicator');
            const text = document.getElementById('aiStatusText');
            
            indicator.className = `ai-indicator ${status}`;
            
            switch(status) {
                case 'speaking':
                    text.textContent = 'AI is speaking';
                    break;
                case 'listening':
                    text.textContent = 'AI is listening';
                    break;
                case 'thinking':
                    text.textContent = 'AI is thinking';
                    break;
                case 'paused':
                    text.textContent = 'AI is paused';
                    break;
                default:
                    text.textContent = 'AI Coach Ready';
            }
        }

        function updateConnectionStatus(status, quality) {
            const qualityEl = document.getElementById('connectionQuality');
            const statusEl = document.getElementById('connectionStatus');
            
            qualityEl.className = `quality-indicator ${quality}`;
            statusEl.textContent = status;
        }

        function updateSessionDescription(text) {
            const descEl = document.getElementById('sessionDescription');
            if (descEl) {
                descEl.textContent = text;
            }
        }

        function updateAISessionStatus(isActive) {
            const statusEl = document.getElementById('aiSessionStatus');
            if (statusEl) {
                if (isActive) {
                    statusEl.innerHTML = `
                        <span style="background: #d4edda; color: #155724; padding: 0.2rem 0.4rem; border-radius: 3px; white-space: nowrap;">
                            ‚úÖ AI session active
                        </span>
                    `;
                } else {
                    statusEl.innerHTML = `
                        <span style="background: #fff3cd; color: #856404; padding: 0.2rem 0.4rem; border-radius: 3px; white-space: nowrap;">
                            ‚è≥ Waiting for coach...
                        </span>
                    `;
                }
            }
        }

        // Speaking indicator for visual feedback
        function updateSpeakingIndicator(streamId, isSpeaking, participantInfo = {}) {
            console.log(`[Speaking] ${streamId} (${participantInfo.participantType || 'unknown'}) is ${isSpeaking ? 'speaking' : 'silent'}`);
            
            // Map stream IDs to video elements based on participant type
            let videoWrapper = null;
            
            if (streamId === 'local') {
                // Local video (client)
                videoWrapper = document.getElementById('localVideo')?.parentElement;
            } else if (participantInfo.participantType === 'ai') {
                // AI agent container
                videoWrapper = document.getElementById('aiAgentContainer')?.parentElement;
            } else if (participantInfo.userRole === 'coach') {
                // Coach placeholder (future)
                videoWrapper = document.getElementById('coachPlaceholder')?.parentElement;
            }
            
            if (videoWrapper) {
                if (isSpeaking) {
                    videoWrapper.classList.add('speaking');
                } else {
                    videoWrapper.classList.remove('speaking');
                }
            }
        }

        // Media Controls - Local only for now
        let localStream = null;
        
        // Get user media for local video
        navigator.mediaDevices.getUserMedia({ video: true, audio: true })
            .then(stream => {
                localStream = stream;
                document.getElementById('localVideo').srcObject = stream;
                updateConnectionStatus('Camera Connected', 'good');
            })
            .catch(err => {
                console.error('Error accessing media devices:', err);
                updateStatus('Camera/microphone access denied', 'error');
                updateConnectionStatus('No Camera', 'poor');
            });
        
        document.getElementById('toggleVideo').addEventListener('click', () => {
            const btn = document.getElementById('toggleVideo');
            const isEnabled = !btn.classList.contains('active');
            
            if (localStream) {
                localStream.getVideoTracks().forEach(track => {
                    track.enabled = !isEnabled;
                });
            }
            btn.classList.toggle('active');
            btn.textContent = isEnabled ? 'üìπ Video Off' : 'üìπ Video';
        });

        document.getElementById('toggleAudio').addEventListener('click', () => {
            const btn = document.getElementById('toggleAudio');
            const isEnabled = !btn.classList.contains('active');
            
            if (localStream) {
                localStream.getAudioTracks().forEach(track => {
                    track.enabled = !isEnabled;
                });
            }
            btn.classList.toggle('active');
            btn.textContent = isEnabled ? 'üé§ Muted' : 'üé§ Audio';
        });

        // Raise Hand feature (visual only for now)
        let handRaised = false;
        document.getElementById('raiseHand').addEventListener('click', () => {
            const btn = document.getElementById('raiseHand');
            handRaised = !handRaised;
            
            btn.classList.toggle('active');
            btn.textContent = handRaised ? '‚úã Hand Raised' : '‚úã Raise Hand';
            
            // TODO: Send hand raise status when WebSocket is enabled
            updateStatus(handRaised ? 'Hand raised (feature coming soon)' : 'Hand lowered', 'info');
        });

        // Initialize connection status
        updateConnectionStatus('Initializing...', 'fair');

        // Auto-hide status messages after session start
        setTimeout(() => {
            const statusElements = document.querySelectorAll('.session-status');
            statusElements.forEach(el => {
                el.style.transition = 'opacity 0.5s';
                el.style.opacity = '0.7';
            });
        }, 10000);

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (localStream) {
                localStream.getTracks().forEach(track => track.stop());
            }
        });

        // Client-specific welcome message and AI setup
        setTimeout(() => {
            updateStatus('Welcome! Your AI Ultra Coach is ready to speak with you.', 'info');
            updateAIStatus('ready');
            updateAISessionStatus(true);
            updateSessionDescription('Your AI Ultra Coach is ready for conversation. Click on the AI widget to start speaking!');
        }, 2000);

        // Check for ElevenLabs widget loading
        function checkElevenLabsWidget() {
            const widget = document.querySelector('elevenlabs-convai');
            if (widget && customElements.get('elevenlabs-convai')) {
                console.log('‚úÖ ElevenLabs AI Coach widget loaded successfully');
                updateStatus('ü§ñ AI Coach is ready for conversation!', 'success');
            } else {
                console.log('‚è≥ Waiting for ElevenLabs widget to load...');
                setTimeout(checkElevenLabsWidget, 1000);
            }
        }
        
        // Start checking for widget after a short delay
        setTimeout(checkElevenLabsWidget, 3000);
    </script>
</body>
</html>