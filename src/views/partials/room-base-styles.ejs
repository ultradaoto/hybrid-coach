<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #1a1a1a;
        color: #fff;
        height: 100vh;
        overflow: hidden;
        -webkit-overflow-scrolling: touch;
    }

    .main-container {
        display: flex;
        height: 100vh;
    }

    /* Left panel - Video area */
    .video-panel {
        flex: 2;
        display: flex;
        flex-direction: column;
        background: #000;
    }

    .video-header {
        background: #2a2a2a;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #404040;
    }

    .room-info h2 {
        font-size: 1.2rem;
        margin-bottom: 0.25rem;
    }

    .room-info .subtitle {
        color: #aaa;
        font-size: 0.9rem;
    }

    .ai-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .ai-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: #28a745;
        animation: pulse 2s infinite;
    }

    .ai-indicator.speaking {
        background: #17a2b8;
        animation: pulse 0.5s infinite;
    }

    .ai-indicator.paused {
        background: #ffc107;
        animation: none;
    }

    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    .video-grid {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
        background: #111;
        flex-wrap: wrap;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
    }

    .video-wrapper {
        position: relative;
        background: #222;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.5);
        transition: transform 0.3s ease;
    }

    .video-wrapper:hover {
        transform: scale(1.02);
    }

    .video-wrapper video {
        width: 320px;
        height: 240px;
        display: block;
        object-fit: cover;
    }

    .video-label {
        position: absolute;
        bottom: 10px;
        left: 10px;
        background: rgba(0,0,0,0.8);
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        color: #fff;
    }

    /* AI Video Styles - treat as real video feed */
    .ai-video-wrapper {
        position: relative;
        background: #222;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.5);
        transition: transform 0.3s ease;
    }

    .ai-video-wrapper:hover {
        transform: scale(1.02);
    }

    .ai-video-wrapper video {
        width: 320px;
        height: 240px;
        display: block;
        object-fit: cover;
        background: #333; /* Fallback when no stream */
    }

    /* Placeholder for when AI video isn't connected */
    .ai-video-placeholder {
        width: 320px;
        height: 240px;
        background: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #888;
        font-size: 14px;
        border-radius: 12px;
    }

    /* Control panels */
    .controls-panel {
        background: #2a2a2a;
        padding: 1rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
        border-top: 1px solid #404040;
    }

    .btn {
        background: #4a4a4a;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.2s;
        border: 2px solid transparent;
    }

    .btn:hover {
        background: #5a5a5a;
        transform: translateY(-1px);
    }

    .btn:active {
        transform: translateY(0);
    }

    .btn.active {
        background: #dc3545;
        border-color: #dc3545;
    }

    .btn.primary {
        background: #007bff;
        border-color: #007bff;
    }

    .btn.success {
        background: #28a745;
        border-color: #28a745;
    }

    /* Status indicator */
    .status {
        position: fixed;
        top: 20px;
        right: 20px;
        background: rgba(0,0,0,0.9);
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        max-width: 300px;
        z-index: 1000;
        transition: all 0.3s ease;
    }

    .status.error {
        background: rgba(220, 53, 69, 0.9);
        border-left: 4px solid #dc3545;
    }

    .status.success {
        background: rgba(40, 167, 69, 0.9);
        border-left: 4px solid #28a745;
    }

    .status.info {
        background: rgba(23, 162, 184, 0.9);
        border-left: 4px solid #17a2b8;
    }

    /* Mobile responsive */
    @media (max-width: 768px) {
        .main-container {
            flex-direction: column;
        }
        
        .video-grid {
            flex-direction: column;
            gap: 1rem;
        }
        
        .video-wrapper video {
            width: 90vw;
            max-width: 320px;
            height: auto;
        }
        
        .ai-avatar-wrapper {
            width: 90vw;
            max-width: 320px;
            height: 200px;
        }
    }
</style>