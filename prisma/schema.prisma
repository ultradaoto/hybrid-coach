// Datasource
 datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
 }

// Generator
 generator client {
   provider = "prisma-client-js"
 }

model User {
  id          String    @id @default(cuid())
  googleId    String    @unique
  email       String    @unique
  displayName String
  role        String
  profile     Profile?
  sessions    Session[]
  messages    Message[]
}

model Profile {
  id      String @id @default(cuid())
  user    User   @relation(fields:[userId], references:[id])
  userId  String @unique
  bioJson Json?
}

model Session {
  id         String     @id @default(cuid())
  roomId     String
  startedAt  DateTime   @default(now())
  endedAt    DateTime?
  summary    String?
  user       User       @relation(fields:[userId], references:[id])
  userId     String
  messages   Message[]
  @@unique([roomId, userId], name: "roomId_userId")
}

model Message {
  id        String   @id @default(cuid())
  session   Session  @relation(fields:[sessionId], references:[id])
  sessionId String
  user      User     @relation(fields:[userId], references:[id])
  userId    String
  sender    String
  content   String
  createdAt DateTime @default(now())
} 